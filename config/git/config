[alias]
	gconf = config --global
	st = !git status --short && echo '----' && git --no-pager stash list
	lg = log --decorate --date=iso --graph
	ci = commit
	br = branch -v
	co = checkout
	di = diff
	f = fetch --tags
	lgo = log --oneline --decorate --graph --date=iso
	fp = fetch --prune --tags
	ss = stash
	sp = stash pop
	mg = merge --no-edit
	lgp = log -p --decorate --date=iso
	lgn = log --decorate --graph --name-status --date=iso
	dc = diff --cached
	brr = branch -vr
	bd = branch -d
	lga = log --graph --decorate --oneline --all
	lgr = log -p --reverse
	p = pull
	pu = push
	puf = push --force-with-lease
	cp = cherry-pick
	lg1 = !git --no-pager log --decorate -1
	wt = worktree
	fa = fetch --prune --tags --all
	sw = switch
	release = !git switch -c release/$(date +\"%Y%m%d%H%M\")
	show-pr = "!f() { git log --merges --oneline --ancestry-path $1...HEAD | grep 'Merge pull request #' | tail -n 1; }; f"
	open-pr = "!f() { gh browse -- $(git log --merges --oneline --ancestry-path $1...HEAD | grep 'Merge pull request #' | tail -n 1 | cut -f5 -d' ' | sed -e 's/#//'); }; f"
[color]
	ui = auto
[push]
	default = current
	useForceIfIncludes = true
[core]
	editor = vim
	quotepath = false
	pager = delta
[rebase]
	autosquash = true
	autostash = true
	updateRefs = true
[credential]
	helper = store --file ~/.config/git/credentials
	UseHttpPath = true
[merge]
	ff = false
[pull]
	rebase = merges
[include]
	path = config.local
[pager]
	stash = false
	branch = false
[diff]
	compactionHeuristic = true
	colorMoved = default
[log]
	date = iso
[grep]
	lineNumber = true
[includeIf "gitdir:~/github/"]
	path = ~/github/gitconfig
[includeIf "gitdir:/work/github/"]
	path = /work/github/gitconfig
[commit]
	template = ~/.config/git/commit_template
[http]
	postBuffer = 524288000
[delta]
	color-only = true
	syntax-theme = Dracula
	navigate = true
	features = line-numbers
[delta "magit-delta"]
	line-numbers = false
[init]
	defaultBranch = main
[fetch]
	prune = true
[status]
	showUntrackedFiles = all
[interactive]
	diffFilter = delta --color-only
[rerere]
	enabled = true
[blame]
	markIgnoredLines = true
[branch]
	autoSetupMerge = false
