[Unit]
Description=xkeysnail

[Service]
KillMode=process
ExecStart=/usr/local/bin/xkeysnail /home/%username%/.config/xkeysnail/config.py
ExecStartPre=/usr/bin/xhost +SI:localuser:%username%
Type=simple
Restart=always

# Update DISPLAY to be the same as `echo $DISPLAY` on your graphical terminal.
Environment=DISPLAY=:0.0

[Install]
WantedBy=default.target
