[user]
	name = krororo
	email = heavens.feel.7@gmail.com
[alias]
	gconf = config --global
	st = !git status --short && git stash list
	lg = log --decorate --date=iso --graph
	ci = commit
	br = branch -v
	co = checkout
	di = diff
	f = fetch --tags --all
	lgo = log --oneline --decorate --graph --date=iso
	fp = fetch --prune --all --tags
	ss = stash
	sp = stash pop
	mg = merge --no-edit
	lgp = log -p --decorate --date=iso
	lgn = log --decorate --graph --name-status --date=iso
	dc = diff --cached
	brr = branch -vr
	bd = branch -d
	lga = log --graph --decorate --oneline --all
	lgr = log -p --reverse
	p = pull
	pu = push
	puf = push --force-with-lease
	cp = cherry-pick
	lg1 = !git --no-pager log --decorate -1
[color]
	ui = auto
[push]
	default = current
[core]
	editor = vim
	quotepath = false
	pager = lv
[rebase]
	autosquash = true
	autostash = true
[credential]
	helper = store
[merge]
	ff = false
[pull]
	rebase = preserve
[include]
	path = ~/.gitconfig.local
[pager]
	diff = diff-highlight | less
	show = diff-highlight | less
	stash = false
[diff]
	compactionHeuristic = true
[log]
	date = iso
